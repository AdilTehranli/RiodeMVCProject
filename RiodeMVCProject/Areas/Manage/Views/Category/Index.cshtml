@using RiodeMVCProject.Models;

@{
    ViewData["Title"] = "Index";
}
@model List<Category>
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
        }

