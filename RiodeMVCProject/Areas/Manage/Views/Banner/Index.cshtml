@using RiodeMVCProject.Models;

@{
    ViewData["Title"] = "Index";
}

@model List<Banner>
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>

            <th>Id</th>
            <th>BannerImage</th>
            <th>Subtitle</th>
            <th>Title</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var banner in Model)
        {

            <tr>
                <td>@banner.Id</td>
                <td><img src="@banner.BannerImage" width="50" /></td>
                <td>@banner.Subtitle</td>
                <td>@banner.Title</td>
                <td>
                </td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@banner.Id" class="btn btn-warning">Redakte et</a></td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@banner.Id" class="btn btn-danger delete-btn">Sil</a></td>
            </tr>
        }
        }


