@using RiodeMVCProject.Models;

@{
    ViewData["Title"] = "Index";
}
@model List<Slider>
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>
            
            <th>Id</th>
            <th>SliderImage</th>
            <th>Subtitle</th>
            <th>Title</th>
            <th>DisCount</th>
            <th>Description</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var slider in Model)
        {
            
            <tr>
                <td>@slider.Id</td>
                <td><img src="~/@slider.SliderImage" width="50" /></td>
                <td>@slider.SubTitle</td>
                <td>@slider.Title</td>
                <td>@slider.DisCount</td>
                <td>@slider.Description</td>
                <td>
                  
                </td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning">Redakte et</a></td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger delete-btn">Sil</a></td>
            </tr>
        }
        }
