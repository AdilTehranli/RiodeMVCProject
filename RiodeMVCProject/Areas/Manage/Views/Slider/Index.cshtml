@using RiodeMVCProject.Models;

@{
    ViewData["Title"] = "Index";
}
@model List<Slider>
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>
            
            <th>Id</th>
            <th>SliderImage</th>
            <th>Subtitle</th>
            <th>Title</th>
            <th>DisCount</th>
            <th>Description</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var slider in Model)
        {
            
            <tr>
                <td>@slider.Id</td>
                <td><img src="~/@slider.SliderImage" width="50" /></td>
                <td>@slider.SubTitle</td>
                <td>@slider.Title</td>
                <td>@slider.DisCount</td>
                <td>@slider.Description</td>
                <td>
                  
                </td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a></td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger delete-btn">Delete</a></td>
            </tr>
        }
        }
        @section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if ((bool?)TempData["IsDeleted"] == true)
    {
        <script>
            Swal.fire(
                'Silindi!',
                'success'
            )
        </script>
    }
    <script>
        $(".delete-btn").click(e=>{
            e.preventDefault();
            let url = e.target.href;
            Swal.fire({
                title: 'Əminsiniz mi?',
                text: "Bu əmri geri qaytarmq olmayacaq!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Hə',
                cancelButtonText:'Yox'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            })
        })
    </script>
    }