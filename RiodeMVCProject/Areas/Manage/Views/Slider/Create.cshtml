

@{
    ViewData["Title"] = "Create";
}
@model CreateSliderVM
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Title</label>
        <input class="form-control" asp-for="Title">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <input class="form-control" asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label>SliderImage</label>
        <input class="form-control" asp-for="SliderImage">
        <span class="text-danger" asp-validation-for="SliderImage"></span>
    </div>
    <div class="mb-3">
        <label>DisCount</label>
        <input class="form-control" asp-for="DisCount">
        <span class="text-danger" asp-validation-for="DisCount"></span>
    </div>
    <div class="mb-3">
        <label for="SubTitle" class="form-label">SubTitle</label>
        <input asp-for="SubTitle">
        <span class="text-danger" asp-validation-for="SubTitle"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

