@using RiodeMVCProject.Models;

@{
    ViewData["Title"] = "Index";
}

@model List<Product>
<a asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>

            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Raiting</th>
            <th>StockCount</th>
            <th>ProductImage</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {

            <tr>
                <td>@product.Id</td>
                <td><img src="@product.Name" width="50" /></td>
                <td>@product.Description</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>@product.Raiting</td>
                <td>@product.StockCount</td>
                <td><img src="@product.ProductImage" /></td>
                <td>
                </td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Redakte et</a></td>
                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger delete-btn">Sil</a></td>
            </tr>
        }
        }

